<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/css/style.css" />
    <link rel="stylesheet" href="/css/btnstyle.css" />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css"
      integrity="sha512-SnH5WK+bZxgPHs44uWIX+LLJAJ9/2PkPKZ5QiAj6Ta86w+fsb2TkcmfRyVX3pBnMFcV7oQPJkl9QevSCWr3W6A=="
      crossorigin="anonymous"
      referrerpolicy="no-referrer"
    />
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
    <title>BlogIT</title>
  </head>
  <body>
    <%- include('./partials/header.ejs') %>

    <section class="create-post">
      <h1 class="section-title" >New Blog Post</h1>
      <form action="/submit" method="post">
        <div>
          <label for="title">Post Title:</label><br />
          <input
            type="text"
            id="title"
            name="title"
            placeholder="Title..."
            required
          />
        </div>
        <div>
          <label for="author">Author Name:</label><br />
          <input
            type="text"
            id="author"
            name="author"
            placeholder="Author..."
            required
          />
        </div>
        <div>
          <br />
          <label for="content">Post Content:</label><br />
          <textarea
            id="content"
            name="content"
            rows="10"
            placeholder="Post..."
            required
          ></textarea>
        </div>
        <div class="form-btn-container">
          <button class="create-post-btn" type="submit">Submit Post</button>
        </div>
      </form>
    </section>

    <h2 class="posts-section-title section-title">Posts</h1>

    <section class="posts">
      <div class="posts-container">
        <% data.forEach(post => { %>
          <div id="<%= post.id %>" class="post">
            <h3 class="post-author"><%= post.author %> </h3>
            <h1 class="post-title"><%= post.title %></h1>
          </div>
        <% }) %>
      </div>
    </section>

    <%- include('./partials/footer.ejs') %>

    <script src="/js/script.js"></script>
  </body>
</html>
